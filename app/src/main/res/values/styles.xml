<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/normal_violet</item>
    </style>

    <style name="neutral_gray" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/neutral_gray_button</item>
    </style>

    <style name="normal_gold" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/normal_gold_button</item>
    </style>

    <style name="normal_blue" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/normal_whiteblue_button</item>
    </style>

    <style name="normal_violet" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/normal_violet_button</item>
    </style>

    <style name="warn_red" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/warn_red_button</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
